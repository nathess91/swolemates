<!DOCTYPE html>
<html>
  <head>
    <title>Swolemates</title>
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>    <%= csrf_meta_tags %>
  </head>

  <body>
    <!-- NAVIGATION -->
    <div id="wrapper">
           <div class="overlay"></div>

           <!-- Sidebar -->
           <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
               <ul class="nav sidebar-nav">
                   <li class="sidebar-brand">

                          <class="navbar-brand"><%= link_to "Swolemates", root_path, :class => "nav-title" %>

                   </li>
                   <li><a href="#">About Swolemates</a></li>
                   <li><%= link_to "Workouts", workouts_path %></li>
                   <% if current_user %>
                   <li><%= link_to "Profile", user_path(current_user) %></li>
                   <li><%= link_to "Your Results", results_path(current_user) %></li>
                   <li><%= link_to "Log Out", logout_path %></li>
                   <% end %>
               </ul>
           </nav>
           <!-- /#sidebar-wrapper -->

           <!-- Page Content -->
           <div id="page-content-wrapper">
               <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                   <span class="hamb-top"></span>
                   <span class="hamb-middle"></span>
                   <span class="hamb-bottom"></span>
               </button>
<!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
    <div class="navbar navbar-inverse navbar-fixed-left"


    </div>
  </button> -->
    <!-- MAIN CONTENT -->
    <div class="container main-div">
      <!-- FLASH MESSAGES -->
      <%= render "partials/error_flash" %>
      <%= render "partials/success_flash" %>
      <%= yield %>
      <% if current_user then %>
        <%= render "challenges/new" %>
      <% else %>
        <%= render "partials/login" %>
      <% end %>
    </div>

  </body>
</html>
