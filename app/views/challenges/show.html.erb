<div class="fluid-container">
	<h1> Battle Royale: <%= @workout.title %> </h1>
	<div class="row">
		<div class= 'col-md-4 col-sm-12'>
			<p class= "challengep"><%= image_tag @user.avatar.url(:thumb) %></p>
			<h4 class= "challengep"><%= @user.first_name %> </h4>
			<b style='color:green; font-size:40px'>Result: </b><br>
			<span style='color:#337ab7;font-size:30px' class='glyphicon glyphicon-time'></span>
			<span style='font-size:30px'><%= @challenge.result.qty %> <%= @challenge.result.unit %></span>
			<p class= "challengep"><%= "Winner!" if @winner === @user %></p>
			<p class= "challengep"><%= "Loser!" if @winner === @opponent %></p>
			<p class= "challengep"><%= "You Both Suck!" if @winner === 'none' %></p>
		</div>

		<div class= 'col-md-4 col-sm-12'>
			<span id='vs'><%= @workout.verb %> <%= @workout.qty %> <%= @workout.unit %></span>
			<h1> VS </h1>
		</div>


		<div class= 'col-md-4 col-sm-12'>
			<p class= "challengep"><%= image_tag @opponent.avatar.url(:thumb) %></p>
			<h4 class= "challengep"><%= @opponent.first_name %> </h4>
			<b style='color:green;'>Result: </b><br>
			<% if @opponent_results %>
			<span style='color:#337ab7;' class='glyphicon glyphicon-time'></span>
			<%= @challenge.opponent_results.qty %> <%= @challenge.opponent_results.unit %>
			<p class= "challengep"><%= "Loser!" if @winner === @user %></p>
			<p class= "challengep"><%= "Winner!" if @winner === @opponent %></p>
			<p class= "challengep"><%= "You Both Suck!" if @winner === 'none' %></p>
			<% elsif current_user == @opponent%>
					<%= form_for (@result = Result.new), url: challenge_path(@challenge), method: :put  do |f| %>
						<%= f.text_field :qty, class: 'form-control col-xs-2' %>
						<%= @workout.unit_of_competition %>
						<%= f.hidden_field :user_id, :value => current_user.id %>
						<%= f.hidden_field :workout_id, :value => @workout.id %>
						<%= f.hidden_field :unit, :value => @workout.unit_of_competition %>
						<%= f.submit class: "btn btn-success" %>
					<% end %>
			<% else %>
			<p class='challengep'><img style='width:25px !important; height:25px !important; margin-left:12vw;' src='https://1.bp.blogspot.com/-rEeXiV82AUE/VuGkY15TF7I/AAAAAAAAAUk/iBviJW2ebVw/s200/spinningwheel.gif'></p>
			<% end %>
		</div>
	</div>
			<% if @challenge.accepted.nil? %>
			<% if current_user == @opponent %>
				<%= link_to "Be a lil bitch (we'll think less of you)", challenge_path(@challenge), {:method => :delete, class: "btn btn-danger inl"}  %>
			<% end %>
			<% end %>
			<%= link_to "Back to challenges", user_path(current_user), class: "btn btn-primary inl" %>
</div>
