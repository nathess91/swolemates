<div><h3>Hello <%= @user.first_name %></h3></div>
<%= form_for @user, url: users_path, html: { multipart: true } do |form| %>
  <%= form.file_field :avatar %>
<% end %>
<div style="float:right">

    <p>Favorite Food: <%= @user.fav_food %></p>
    <p>Favorite Type of Workout: <%= @user.fav_workout %></p>

</div>
Joined: <%= @user.created_at.to_date %>
<br>

Most Recent Workout:
<% if @user.results.count == 0 %>
<h1>Work Out More </h1>
<% else %>
<%= @user.results.last.workout.title %>
<a src='#'>Update Information</a>
<% end %>
<% unless @user.challenges.count == 0 %>
<%= link_to 'View Challenges', challenges_path(@current_user) %>
<% end %>
<%= link_to 'Challenge a Friend', new_challenge_path %>
