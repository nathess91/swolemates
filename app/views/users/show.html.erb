
    <div class="card hovercard">
        <div class="card-background">
            <%= image_tag @user.avatar.url, class: "card-bkimg" %>
        </div>
        <div class="useravatar">
            <%= image_tag @user.avatar.url %><br>
        </div>
        <div class="card-info">
          <span class="card-title"><%= @user.first_name %></span>
          <br>
          <span class="more-info">
            <b>Swole Since:   </b> <%= @user.created_at.strftime("%B %d, %Y") %><br>
            <b>Food/Diet:   </b> <%= @user.fav_food %><br>
            <b>Favorite Workout:   </b> <%= @user.fav_workout %><br>
            <%= link_to edit_user_path(@user) do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </span>

        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                <div class="hidden-xs">Most Recent Workout</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
                <div class="hidden-xs">Challenges</div>
            </button>
        </div>
    </div>

      <div class="well">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="tab1">
          <h3>Most Recent Workout</h3>
          <br>
          <% if @user.results.count == 0 %>
            <p><i>Nothing to see here...Work out more!!</i></p>
          <% else %>
            <b><%= @user.results.last.workout.title %></b><br>
            <%= @user.results.last.workout.qty %> <%= @user.results.last.workout.unit %><br>
            <%= @user.results.last.qty %> <%= @user.results.last.workout.unit_of_competition %>
          <% end %>
        </div>
        <div class="tab-pane fade in" id="tab2">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                  <h3 class="challenge-tagline"> Will you rise up? </h3>
              </div>
            </div>
          </div>
          <br>
          <div class="container">
            <% @challenges.each do |challenge| %>
              <div class="row">
                <div class="col-md-6">
                  <% status = challenge.opponent_results_id === nil ? "Active" : "Completed" %>
                  <div>
                    <h3><%= link_to "#{status} Challenge", challenge_path(challenge)%> </h3>
                    <%= "#{challenge.workout.title} vs " %> <%= current_user.id === challenge.user.id ? "#{challenge.opponent.first_name}" : "#{challenge.user.first_name}"%>
                  </div>
                </div>
                <div class="col-md-6">
                  <% if challenge.workout.verb == 'run' %>
                    <% photo = "https://c1.staticflickr.com/5/4074/4879698252_d0581d68dd_b.jpg" %>
                  <% elsif challenge.workout.verb == 'bike' %>
                    <%photo = "http://claimyourjourney.com/wp-content/uploads/2012/06/bike.jpg" %>
                  <% elsif challenge.workout.verb == 'swim' %>
                     <% photo ="http://www.nbcolympics.com/sites/default/files/styles/951x536_rectangle/public/field_image/06August2016/maya-dirado-usatsi_8016584.jpg?itok=i_Wq--A6" %>
                  <% end %>
                  <%= image_tag(photo, class: "challenge_photo pull-right") %>
                </div>
              </div>
              <br>
            <% end %>

            <div class="row">
              <div class="col-md-12 align-center">
                <%= will_paginate @challenges %><br>
                <%= link_to 'New Challenege', "#new-challenge-modal", "data-toggle" => "modal", class: 'btn btn-primary' %>
                <br>
                <br>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
    </div>
