<h1 class="title">SWOLEMATES</h1>
<h3 class="subtitle">Rise to the challenge!</h3>

<div class="col-xs-12 photo">
    <%= image_tag("http://www.columbiamo.va.gov/images/image_PinkRibbonRace.jpg", :class => "cover-photo img-responsive") %>
</div>
<div class='wrapper'>
<div class="row">
    <div class="col-xs-5 register">
    <div class="title-text">
        <h2 class='title-text-h2'> People Work Out <br> Better Together</h2>
        <p class='title-text-p'> Friendly competition pushes people to be the best they can be. Join the community and find your Swolemate </p>
    </div>
    <%= form_for (@user = User.new), :html => { :multipart => true } do |f| %>
        <div class="container well col-xs-12 small-container signup-container">
            <div class="col-xs-12 inline-block width-50 margin-top-5">
                <%= f.text_field :first_name, class: "form-control inline-block", placeholder: "First Name" %>
            </div>
            <div class="col-xs-12 inline-block width-50">
                <%= f.text_field :last_name, class: "form-control margin-top-5 inline-block", placeholder: "Last Name" %>
            </div>
            <div class="col-xs-12 inline-block width-50 margin-top-5">
                <%= f.number_field :age, class: "form-control ", placeholder: "Age" %>
            </div>
            <div class="col-xs-12 inline-block width-50 margin-top-5">
                <%= f.select :gender, [['male'],['female']], class: "form-control inline-block center_vertical" %>
            </div>

            <div class="col-xs-12 margin-top-5">
                <%= f.text_field :fav_workout, class: "form-control", placeholder: "Favorite Workout" %>
            </div>
            <div class="col-xs-12 margin-top-5">
                <%= f.text_field :fav_food, class: "form-control", placeholder: "Favorite Food" %>
            </div>
            <div class="col-xs-12 margin-top-5">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="col-xs-12 margin-top-5">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            <div class="col-xs-12 margin-top-5">
                <%= f.submit "Sign up for Swolemates", class: "btn btn-primary btn-lg btn-block" %>
            </div>
            <% if !current_user %>
            <div class="col-xs-12 margin-top-5">
                <%= link_to 'Already a member? Sign In', "#login-modal", "data-toggle" => "modal", class: "btn btn-danger btn-lg btn-block" %>
            </div>
            <% end %>
        </div>
    <% end %>
    </div>
</div>

